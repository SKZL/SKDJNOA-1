<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

    <session-factory>
	<!-- Database connection settings -->
	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
	<property name="connection.url">jdbc:mysql://localhost:3306/educationaloa</property>
	<property name="connection.username">root</property>
	<property name="connection.password">root</property>

	<!-- SQL dialect -->
	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

	<property name="current_session_context_class">thread</property>
	<!-- Echo all executed SQL to stdout -->
	<property name="show_sql">true</property>
	<property name="formart">true</property>
	<property name="hibernate.c3p0.min_size">5</property>
	<property name="hibernate.c3p0.max_size">20</property>
	<property name="hibernate.c3p0.timeout">1800</property>
	<property name="hibernate.c3p0.max_statements">50</property>
	<property name="myeclipse.connection.profile">JDBC_MySQL</property>


	<mapping resource="com/po/ClassName.hbm.xml" />
	<mapping resource="com/po/Colleage.hbm.xml" />
	<mapping resource="com/po/Course.hbm.xml" />
	<mapping resource="com/po/Department.hbm.xml" />
	<mapping resource="com/po/Management.hbm.xml" />
	<mapping resource="com/po/Professional.hbm.xml" />
	<mapping resource="com/po/PublicCourse.hbm.xml" />
	<mapping resource="com/po/PublicElective.hbm.xml" />
	<mapping resource="com/po/ScoreManagement.hbm.xml" />
	<mapping resource="com/po/Student.hbm.xml" />
	<mapping resource="com/po/Teacher.hbm.xml" />
	<mapping resource="com/po/Users.hbm.xml" />

</session-factory>

</hibernate-configuration>